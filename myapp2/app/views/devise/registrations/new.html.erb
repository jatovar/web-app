<div class="mdl-card mdl-shadow--2dp demo-card-square">


  <h2 class="mdl-card__big-text">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label textfield-demo">        
        <%= f.label :email, :class => 'mdl-textfield__label'%>
        <%= f.email_field :email, :class => 'mdl-textfield__input',:type => 'text'%>
      </div>
    </div>

    <div>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label textfield-demo">
        <%= f.label :password, :class => 'mdl-textfield__label'%>
        <%= f.password_field :password, autocomplete: "off", :class => 'mdl-textfield__input',:type => 'text'%>
      </div>
    </div>
    <div>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label textfield-demo">
        <%= f.label :password_confirmation, :class => 'mdl-textfield__label' %>
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'mdl-textfield__input',:type => 'text' %>
      </div>
    </div>


    <div class="actions">
      <%= f.submit "Sign up",  :class => 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect'%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
